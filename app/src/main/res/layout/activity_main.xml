<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaaaaa"
        tools:context=".MainActivity">


    <org.noandish.library.singleslidermenu.SingleCircleSliderMenuView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp">

        <!-- Sample with only show  -->

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="left|center"
                      android:orientation="horizontal">
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_info_24dp"
                    android:id="@+id/imageView"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:padding="5dp"
                      android:gravity="center"
                      android:text="info"/>
        </LinearLayout>

        <!-- Sample with only show  -->

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="left|center"
                      android:orientation="horizontal">
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_account_circle_24dp"
                    android:id="@+id/imageView2"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:padding="5dp"
                      android:gravity="center"
                      android:text="Profile"/>
        </LinearLayout>


        <!-- Sample with action  -->

        <LinearLayout
                android:id="@+id/ssv1" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="click"
                android:gravity="left|center"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_add_circle_black_24dp"
                    android:id="@+id/imageView4"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:padding="5dp"
                      android:gravity="center"
                      android:text="Profile"/>
        </LinearLayout>


        <!-- Sample with only show  -->

        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_add_circle_black_24dp"
                android:id="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                tools:ignore="VectorDrawableCompat"/>

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"/>


        <!-- OR you can add any view -->

    </org.noandish.library.singleslidermenu.SingleCircleSliderMenuView>


</android.support.constraint.ConstraintLayout>